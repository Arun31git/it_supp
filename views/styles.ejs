<style>
  body { font-family: Arial, sans-serif; }
  .ticket-container { width: 80%; margin: auto; }
  .ticket-header { background-color: #f2f2f2; padding: 10px; }
  .ticket { border: 1px solid #ddd; margin-top: 5px; padding: 10px; }
  .ticket-details { display: flex; justify-content: space-between; }
  .ticket-details div { margin-right: 10px; }
  table { width: 100%; border-collapse: collapse;}
  th, td { border: 1px solid #ddd; padding: 8px; text-align: left;}
  th { background-color: #f2f2f2;}
  .ticket {
    margin-bottom: 20px;
}

.ticket table {
    width: 100%;
    border-collapse: collapse;
    border-radius: 40%;
    border: 1px solid black;
   
    
}

.ticket .row1{
  background-color: aqua;
  height: 90px;
}

.ticket th , td {
    padding: 20px;
    border-style: hidden;
}

.ticket-row:nth-child(even) {
    background-color: #eeeaea; /* Optional: alternate row background color */
    border-radius: 30px;
}

.ticket-row:nth-child(odd) {
  background-color: #cec9c9; /* Optional: alternate row background color */
  border-radius: 30px;
}


